{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/sendContactEmail",
        "function": "sendContactEmail"
      },
      {
        "source": "/api/cacheLatestGithubProject",
        "function": "cacheLatestGithubProject"
      }
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=60"
          }
        ]
      },
      {
        "source": "/favicon.ico",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      }
    ]
  }
}
